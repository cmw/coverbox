[alias]
	connect-to-remote = !bash ~/.git/coverbox.sh remote_track add 
	disconnect-remote = !bash ~/.git/coverbox.sh remote_track del 

	remote-branch-add = !bash ~/.git/coverbox.sh remote_branch add 
	remote-branch-del = !bash ~/.git/coverbox.sh remote_branch del 

	publish           = !bash ~/.git/coverbox.sh local_change publish 
	receive           = !bash ~/.git/coverbox.sh local_change receive 
	rid               = !bash ~/.git/coverbox.sh local_change rid 

	wtf               = !sh -c 'ruby ~/.git/git-wtf.rb'